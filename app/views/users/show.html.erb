<h1 class="heading">Welcome to <%= @user.username %>'s page </h1>
<div class="row">
  <div class="col-md-4 col-md-offset-5 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<h3 align="center"><%= @user.username %>'s articles</h3>
<%= render 'articles/article', obj: @user.articles %>

<div class="center">
  <%= will_paginate @user_articles %>
</div>