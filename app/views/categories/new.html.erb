<%= render 'shared/errors', obj: @category %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do|f|%>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-success btn-lg" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="col-xs-4 col-xs-offset-5">
  <%= link_to 'Cancel and back to article listing', articles_path %>
</div>
    